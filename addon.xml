<?xml version="1.0"?>
<addon scheme="3.0">
    <id>autoimage</id>
    <version>1.0</version>
    <name>Auto Image</name>
    <description>Smart images resizing and cropping</description>
    <priority>120000</priority>
    <position>0</position>
    <status>active</status>
    <has_icon>Y</has_icon>
    <default_language>en</default_language>
    <language_variables>
        <item lang="en" id="auto_image_hint_title_a">Why, hello there!</item>
        <item lang="en" id="auto_image_hint_message_a"><![CDATA[<span style="font-size: 170%;"> &#9786; </span> Now that you activated <b>Auto Image</b>, it's recommended to clear up the thumbnails cache by <a href="[link]">clicking here</a>, so that the shinny new thumbnails can be regenerated.]]></item>
        <item lang="en" id="auto_image_hint_title_d">I'm gonna go now. Buh bye..</item>
        <item lang="en" id="auto_image_hint_message_d"><![CDATA[<span style="font-size: 170%;"> &#9785; </span> But before that, you should <a href="[link]">click here</a> to regenerate back the default CS-Cart's thumbnails.]]></item>
    </language_variables>
    <functions>
        <item for="uninstall">fn_autoimage_uninstall</item>
    </functions>
</addon>